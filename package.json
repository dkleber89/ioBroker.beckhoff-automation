{
  "name": "iobroker.beckhoff-automation",
  "version": "0.0.1",
  "description": "ioBroker Adapter to Communicate with a TwinCat 2 or TwinCat 3 Beckhoff Automation PLC",
  "author": {
    "name": "dkleber89",
    "email": "dkleber89@gmail.com"
  },
  "homepage": "https://github.com/dkleber89/ioBroker.beckhoff-automation",
  "license": "MIT",
  "keywords": [
    "Beckhoff",
    "ADS",
    "Communication",
    "ioBroker",
    "PLC",
    "TwinCat",
    "SmartHome"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dkleber89/ioBroker.beckhoff-automation"
  },
  "peerDependencies": {
    "@iobroker/adapter-react": "^2.0.22",
    "@material-ui/core": "^4.12.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.5.1",
    "@material-ui/icons": "^4.11.3",
    "node-ads": "^1.5.1",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.5.8",
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.8",
    "@babel/plugin-proposal-decorators": "^7.18.2",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@dkleber89/shared.project.config": "^0.1.5",
    "@iobroker/adapter-react": "^2.0.22",
    "@iobroker/testing": "^2.5.6",
    "@material-ui/core": "^4.12.4",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/gulp": "^4.0.9",
    "@types/mocha": "^9.1.1",
    "@types/node": "^12.12.6",
    "@types/proxyquire": "^1.3.28",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.11",
    "@types/sinon": "^10.0.11",
    "@types/sinon-chai": "^3.2.8",
    "@types/xml2js": "^0.4.11",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "axios": "^0.27.2",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "gulp": "^4.0.2",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "parcel-bundler": "^1.12.5",
    "prettier": "^2.6.2",
    "proxyquire": "^2.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "sinon": "^12.0.1",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.7.0",
    "typescript": "^4.7.2"
  },
  "main": "build/main.js",
  "scripts": {
    "check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "lint:fix": "npm run lint -- --fix",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:watch": "npm run test:ts -- --watch",
    "test:coverage": "nyc npm run test:ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "watch:parcel": "parcel admin/src/index.tsx -d admin/build --hmr-port 1235",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "prebuild": "rimraf ./build",
    "build:parcel": "parcel build admin/src/index.tsx -d admin/build",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts && npm run build:parcel",
    "release": "release-script"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/dkleber89/ioBroker.beckhoff-automation/issues"
  },
  "readmeFilename": "README.md"
}
